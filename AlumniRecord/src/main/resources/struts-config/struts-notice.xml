<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <package name="notice" namespace="/notice" extends="xytxl-struts" strict-method-invocation="false">
    	<action name="noticeAction_*"  class="cn.edu.cumt.action.NoticeAction" method="{1}">
			<!-- 配置类型的json的Result -->
			<result type="json">
				<!-- 为该Result指定参数 -->
				<param name="noCache">true</param>
				<param name="contentType">text/html</param>
				<param name="root">jsonObject</param>
			</result>			
		</action>
		<action name="*">
			<result>/WEB-INF/content/notice/{1}.jsp</result>			
		</action>  
	</package>
</struts>
